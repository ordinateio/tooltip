{
  "name": "@ordinateio/tooltip",
  "version": "1.0.0",
  "description": "Adaptation for Tippy.js.",
  "main": "dist/tooltip.js",
  "types": "dist/tooltip.d.ts",
  "style": "dist/tooltip.css",
  "files": [
    "dist/**/*"
  ],
  "author": "Ordinate IO (https://github.com/ordinateio)",
  "license": "MIT",
  "homepage": "https://github.com/ordinateio/tooltip",
  "bugs": {
    "url": "https://github.com/ordinateio/tooltip/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordinateio/tooltip.git.git"
  },
  "keywords": [
    "front-end",
    "ui",
    "typescript"
  ],
  "scripts": {
    "build:dist": "npx tsc --project tsconfig.json && npx sass --no-source-map src/tooltip.scss dist/tooltip.css",
    "build:all": "npm run build:clean && npm run build:dist && npm run build:demo",
    "build:demo": "npx webpack --config demo/webpack.config.js",
    "build:demo:watch": "npx webpack --watch --config demo/webpack.config.js",
    "build:demo:server": "npx live-server ./demo",
    "build:clean": "npx rimraf .cache dist demo/dist *.tgz",
    "npm:pack": "npm run build:clean && npm run build:dist && npm pack",
    "npm:publish": "npm publish --access public",
    "npm:reinstall": "npx rimraf node_modules && npm install",
    "npm:lock:only": "npm install --package-lock-only"
  },
  "devDependencies": {
    "@types/node": "^14",
    "autoprefixer": "^10",
    "css-loader": "^5",
    "cssnano": "^4",
    "live-server": "^1",
    "postcss-loader": "^4",
    "rimraf": "^3",
    "sass": "^1",
    "sass-loader": "^10",
    "style-loader": "^2",
    "ts-loader": "^8",
    "typescript": "^4",
    "webpack": "^5",
    "webpack-cli": "^4"
  },
  "dependencies": {
    "@ordinateio/lexicon": "^1",
    "tippy.js": "^6"
  }
}
